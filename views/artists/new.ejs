<%- include('../partials/header') %>

<% if (invalidArtist) { %>
    <h1 class="main-title">Invalid Artist!</h1>
    <h4>Please try again.</h4><br><br>
<% } %>
<% if (artistData) { %>
    <h3 class="main-title">ARTIST FOUND!</h3>
    <h4>Confirm artist.</h4><br><br>
    <form action="/artists" method="POST">
        <label> Artist:
            <h5><%= artistData[0] %></h5>
        </label><br>
        <label> Is this the artist you are looking for?
            <select name="correctArtist">
                <option value="true">YES</option>
                <option value="">NO</option>
            </select>
        </label><br><br>
        <!-- The following hidden input is not very secure. Change eventually. -->
        <input name="artistId" type="hidden" value="<%= artistData[1] %>">
        <button type="submit">SUBMIT</button>
    </form>
<% } else { %>
    <h1 class="main-title">ADD AN ARTIST!</h1>
    <h4>Enter a name into the field.</h4><br><br>
<form action="/artists/new" method="POST">
    <label> Artist Name:
        <input name="artistname" type="text">
    </label><br><br>
    <button type="submit">SUBMIT</button>
</form>
<% } %>

<%- include('../partials/footer') %>