<%- include('../partials/header') %>

<% if (invalidArtist) { %>
    <h3>Invalid Artist!</h3>
    <p>Please try again.</p>
<% } %>
<% if (artistData) { %>
    <h3>ARTIST FOUND!</h3>
    <p>Confirm artist.</p>
    <form action="/artists" method="POST">
        <label> Artist:
            <h5><%= artistData[0] %></h5>
        </label><br>
        <label> Is this the artist you are looking for?
            <select name="correctArtist">
                <option value="true">YES</option>
                <option value="">NO</option>
            </select>
        </label><br><br>
        <!-- The following hidden input is not very secure. Change eventually. -->
        <input name="artistId" type="hidden" value="<%= artistData[1] %>">
        <button type="submit">SUBMIT</button>
    </form>
<% } else { %>
    <h3>ADD AN ARTIST!</h3>
    <p>Enter a name into the field.</p>
<form action="/artists/new" method="POST">
    <label> Artist Name:
        <input name="artistname" type="text">
    </label><br><br>
    <button type="submit">SUBMIT</button>
</form>
<% } %>

<%- include('../partials/footer') %>