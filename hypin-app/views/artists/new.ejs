<%- include('../partials/header') %>

<% if (artistData) { %>
    <form action="/artists" method="POST">
        <label> Artist:
            <h5><%= artistData[0] %></h5>
        </label><br>
        <label> Is this the artist you are looking for?
            <select name="correctArtist">
                <option value="true">YES</option>
                <option value="false">NO</option>
            </select>
        </label><br><br>
        <button type="submit">SUBMIT</button>
    </form>
<% } else { %>
<form action="/artists/new" method="POST">
    <label> Artist Name:
        <input name="artistname" type="text">
    </label><br><br>
    <button type="submit">SUBMIT</button>
</form>
<% } %>

<%- include('../partials/footer') %>