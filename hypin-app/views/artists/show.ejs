<!-- releases gallery -->
<%- include("../partials/header") %>

<h1 class="fw-light text-center text-lg-start mt-4 mb-0">Artist Page</h1>
<div class="container">
<% artist.releases.forEach(function(rel) { %>
        <!-- top margin -->
        <hr class="mt-2 mb-5"> 
        <!-- tiles for the images.  -->
        <div class="row text-center text-lg-start">
            <div class="col-lg-12 col-md-4 col-6">
                <a href="/artists/<%= artist._id %>/<%= rel._id %>" class="d-block mb-4 h-100">
                    <img class="img-fluid img-thumbnail" src= "<%= rel.thumb %>" alt="">
                </a>
            </div>
        </div>
<% }); %>
</div>


<%- include("../partials/footer") %>